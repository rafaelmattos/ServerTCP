@model Server.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Equipamentos
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Equipamentos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a asp-controller="Equipamentos" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-controller="Equipamentos" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-controller="RemoteMessages" asp-action="Transacoes" asp-route-id="@item.Id">Transações</a> |
                        <a asp-controller="Equipamentos" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar para Lista</a>
</div>
