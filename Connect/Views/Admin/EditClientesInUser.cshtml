@model List<Connect.ViewModels.UserClienteViewModel>

@{
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Adicionar ou remover Clientes deste Usuário.</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].ClienteId" />
                    <input type="hidden" asp-for="@Model[i].Nome" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].Nome
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Salvar" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@userId"
               class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>
